<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_kf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@null"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/ly_search_box"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_search" />

        <EditText
            android:id="@+id/tv_search_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center"
            android:cursorVisible="false"
            android:text=""
            android:textColor="@color/text_font_normal"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_speak"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_speak" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_ling"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:contentDescription="@null" />
</LinearLayout>