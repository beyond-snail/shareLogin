<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_list_bg"
    android:orientation="horizontal"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            app:riv_mutate_background="true"
            app:riv_corner_radius="5dp"
            app:riv_oval="false"
            app:riv_tile_mode="clamp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_drug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/tv_person_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="--"
                android:textSize="13sp"
                android:textColor="#666666"/>

        </LinearLayout>
        <myyl.com.myyl.utils.views.RTextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="--"
            android:textColor="@color/font_yl"
            android:textSize="14sp"
            rtv:icon_src_normal="@mipmap/ic_dun"
            rtv:icon_direction="left"
            rtv:icon_height="20dp"
            rtv:icon_width="20dp"/>
    </LinearLayout>





</LinearLayout>