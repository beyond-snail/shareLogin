        android:paddingLeft="8dp"
        android:layout_toRightOf="@id/titleback_linear_back"
        android:gravity="center_vertical"
        android:textColor="@color/fffefe"
        android:textSize="@dimen/s_19sp"
        android:visibility="invisible" />
     -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- 
    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/delete_sure"
        android:visibility="gone"
        />
     -->

    <TextView
        android:id="@+id/next_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="11dp"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/img_header_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:gravity="right"
        android:src="@mipmap/ic_more"
        android:contentDescription="@null"
        android:visibility="gone" />

</RelativeLayout>